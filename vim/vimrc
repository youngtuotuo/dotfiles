set mouse=nvi nu rnu ruler showmatch noswapfile autoread undofile hlsearch incsearch
let &undodir=$HOME . "/.local/state/vim/undo/"
set history=10000

runtime ftplugin/man.vim
packadd! matchit cfilter termdebug

nnoremap d_ d^
nnoremap c_ c^
inoremap , ,<C-g>u
inoremap . .<C-g>u
tnoremap <esc><esc> <C-\><C-n>
nnoremap Y y$
nnoremap J mzJ`z

autocmd! BufRead,BufNewFile *.typ set filetype=typst
