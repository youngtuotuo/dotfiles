{
  "title": "Customization",
  "rules": [
    {
      "description": "Mouse 5 -> contorl",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "left_control",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control + left click -> contorl + command",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "left_control",
              "modifiers": [
                "left_control",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control + right click -> contorl + alt",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button2",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "left_control",
              "modifiers": [
                "left_control",
                "left_alt"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Shift + Esc to ~",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "repeat": true,
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control + Esc to `",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": []
            }
          ]
        }
      ]
    }
  ]
}
