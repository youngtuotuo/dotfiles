{
  "title": "Customization",
  "rules": [
    {
      "description": "Mouse 5 -> control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description": "control + left click -> contorl + command + left click",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "repeat": true,
              "pointing_button": "button1",
              "modifiers": [
                "left_control",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control + right click -> contorl + option + right click",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button2",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "repeat": true,
              "pointing_button": "button2",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control + middle click -> command + m",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "repeat": true,
              "key_code": "m",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control + ` to esc",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape",
              "modifiers": []
            }
          ]
        }
      ]
    }
  ]
}
